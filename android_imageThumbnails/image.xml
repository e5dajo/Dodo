 <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="center" android:clickable="true" android:id="@+id/imView"></ImageView>
 <ImageView android:layout_width="wrap_content" android:src="@drawable/back" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:clickable="true" android:id="@+id/BackImView"></ImageView> 
 <TextView
